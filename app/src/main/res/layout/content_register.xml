<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.main.MainActivity">
    <!-- tools:showIn="@layout/app_bar_main" -->

    <EditText
        android:id="@+id/editText_register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_register_username"
        app:layout_constraintStart_toStartOf="@+id/editText_register_username"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_username" />

    <EditText
        android:id="@+id/editText_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editText_register_email"
        app:layout_constraintStart_toStartOf="@+id/editText_register_email"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_email" />

    <EditText
        android:id="@+id/editText_register_repassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/editText_register_password"
        app:layout_constraintStart_toStartOf="@+id/editText_register_password"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_password" />

    <EditText
        android:id="@+id/editText_register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_register_repassword"
        app:layout_constraintStart_toStartOf="@+id/editText_register_repassword"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_repassword" />

    <EditText
        android:id="@+id/editText_register_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_register_name"
        app:layout_constraintStart_toStartOf="@+id/editText_register_name"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_name" />

    <EditText
        android:id="@+id/editText_register_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editText_register_surname"
        app:layout_constraintStart_toStartOf="@+id/editText_register_surname"
        app:layout_constraintTop_toBottomOf="@+id/editText_register_surname" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/register"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/username"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/editText_register_username"
        app:layout_constraintTop_toTopOf="@+id/editText_register_username" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/password"
        app:layout_constraintEnd_toStartOf="@+id/editText_register_password"
        app:layout_constraintTop_toTopOf="@+id/editText_register_password" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/confirm_password"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/editText_register_repassword"
        app:layout_constraintTop_toTopOf="@+id/editText_register_repassword" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/name"
        app:layout_constraintEnd_toStartOf="@+id/editText_register_name"
        app:layout_constraintTop_toTopOf="@+id/editText_register_name" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/surname"
        app:layout_constraintEnd_toStartOf="@+id/editText_register_surname"
        app:layout_constraintTop_toTopOf="@+id/editText_register_surname" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/phone_number"
        app:layout_constraintEnd_toStartOf="@+id/editText_register_phone"
        app:layout_constraintTop_toTopOf="@+id/editText_register_phone" />


    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/email"
        app:layout_constraintEnd_toStartOf="@+id/editText_register_email"
        app:layout_constraintTop_toTopOf="@+id/editText_register_email" />

    <ProgressBar
        android:id="@+id/progressBar_register_username"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_username"
        app:layout_constraintStart_toEndOf="@+id/editText_register_username"
        app:layout_constraintTop_toTopOf="@+id/editText_register_username" />

    <ImageView
        android:id="@+id/imageView_register_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_username"
        app:layout_constraintStart_toEndOf="@+id/editText_register_username"
        app:layout_constraintTop_toTopOf="@+id/editText_register_username"
        app:srcCompat="@drawable/ic_done_black_24dp" />


    <ImageView
        android:id="@+id/imageView_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_password"
        app:layout_constraintStart_toEndOf="@+id/editText_register_password"
        app:layout_constraintTop_toTopOf="@+id/editText_register_password"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ImageView
        android:id="@+id/imageView_register_repassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_repassword"
        app:layout_constraintStart_toEndOf="@+id/editText_register_repassword"
        app:layout_constraintTop_toTopOf="@+id/editText_register_repassword"
        app:srcCompat="@drawable/ic_done_black_24dp" />
    <ImageView
        android:id="@+id/imageView_register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_name"
        app:layout_constraintStart_toEndOf="@+id/editText_register_name"
        app:layout_constraintTop_toTopOf="@+id/editText_register_name"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ImageView
        android:id="@+id/imageView_register_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_surname"
        app:layout_constraintStart_toEndOf="@+id/editText_register_surname"
        app:layout_constraintTop_toTopOf="@+id/editText_register_surname"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ImageView
        android:id="@+id/imageView_register_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_phone"
        app:layout_constraintStart_toEndOf="@+id/editText_register_phone"
        app:layout_constraintTop_toTopOf="@+id/editText_register_phone"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ImageView
        android:id="@+id/imageView_register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_email"
        app:layout_constraintStart_toEndOf="@+id/editText_register_email"
        app:layout_constraintTop_toTopOf="@+id/editText_register_email"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ProgressBar
        android:id="@+id/progressBar_register_email"
        style="?android:attr/progressBarStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editText_register_email"
        app:layout_constraintStart_toEndOf="@+id/editText_register_email"
        app:layout_constraintTop_toTopOf="@+id/editText_register_email" />


</android.support.constraint.ConstraintLayout>